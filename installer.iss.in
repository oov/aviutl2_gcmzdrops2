; GCMZDrops Installer Script - Generated by CMake
; Supports both standard and portable installation modes

#define MyAppName "GCMZDrops"
#define MyAppVersion "@GCMZ_INSTALLER_VERSION@"
#define MyAppPublisher "oov"
#define MyAppURL "https://github.com/oov/aviutl2_gcmzdrops2"

[Setup]
AppId={{DD101687-983B-4A37-A374-52BAEFC437E2}
AppName={#MyAppName}
AppVersion={#MyAppVersion}
AppPublisher={#MyAppPublisher}
AppPublisherURL={#MyAppURL}
AppSupportURL={#MyAppURL}
AppUpdatesURL={#MyAppURL}
DefaultDirName=C:\ProgramData\aviutl2\Plugin
UninstallFilesDir={app}\{#MyAppName}
UninstallDisplayName={#MyAppName} {#MyAppVersion}
DisableDirPage=yes
DisableProgramGroupPage=yes
DisableReadyPage=yes
InfoBeforeFile=@GCMZ_README_FILE@
OutputDir=@GCMZ_INSTALLER_OUTPUT_DIR@
OutputBaseFilename=gcmzdrops_@GCMZ_INSTALLER_VERSION@_setup
Compression=lzma
SolidCompression=yes
WizardStyle=dynamic
ArchitecturesInstallIn64BitMode=x64compatible
PrivilegesRequired=lowest
CreateUninstallRegKey=not IsPortableMode
Uninstallable=not IsPortableMode

[Languages]
Name: "english"; MessagesFile: "compiler:Default.isl"
Name: "japanese"; MessagesFile: "compiler:Languages\Japanese.isl"
Name: "chinesesimplified"; MessagesFile: "@GCMZ_CHINESE_SIMPLIFIED_ISL@"

